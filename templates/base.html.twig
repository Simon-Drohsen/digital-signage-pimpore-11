<!DOCTYPE html>
<html class="{% block html_class %}{% endblock %}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/images/favicon/wvision_favicon.png') }}" type="image/x-icon">
        <meta http-equiv="refresh" content="{% block redirects %}{% endblock %}">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-midnight {% block body_class %}{% endblock %}">
        {% block body %}{% endblock %}
    </body>
</html>
