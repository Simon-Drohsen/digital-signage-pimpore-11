{% extends 'base.html.twig' %}

{% block title %}{{ mail.params['mail'].subject }}{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto bg-white rounded-lg shadow-md p-6 mt-10">
        {% if editmode %}
            <div class="text-center mb-6">
                <h1 class="text-2xl font-bold text-gray-900">%subject%</h1>
                <p class="text-sm text-gray-600 mt-2">Hallo %name%</p>
                <p class="text-sm text-gray-600 mt-2">Vergiss nicht, %firstname% %lastname% hat bald Geburtstag</p>
            </div>

            <div class="text-center">
                <p class="text-lg font-semibold text-gray-800">%firstname%'s Geburtstag ist am %birthday%</p>
                <p class="text-gray-600">Du hast noch <strong>%days% Tage</strong> Zeit!</p>
            </div>
        {% else %}
            <div class="text-center mb-6">
                <h1 class="text-2xl font-bold text-gray-900">{{ mail.params['mail'].subject }}</h1>
                <p class="text-sm text-gray-600 mt-2">Hallo {{ mail.params['mail'].name }}</p>
                <p class="text-sm text-gray-600 mt-2">Vergiss nicht, {{ employee.firstname }} {{ employee.lastname }} hat bald Geburtstag</p>
            </div>

            <div class="text-center">
                <p class="text-lg font-semibold text-gray-800">{{ employee.firstname }}'s Geburtstag ist am {{ employee.birthday|date('d. F') }}</p>
                <p class="text-gray-600">Du hast noch <strong>{{ days }} Tage</strong> Zeit!</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
